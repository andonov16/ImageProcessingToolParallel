<UserControl x:Class="ImageProcessingToolParallel.Desktop.ThumbnailControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImageProcessingToolParallel.Desktop"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200" Background="#27233A">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="128"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="ImageNameTextBlock" Style="{StaticResource ImageNameStyle}">myImage123.png</TextBlock>
        
        <Image Width="128" Height="128" Grid.Row="1"/>

        <Grid x:Name="ImageButtonsGrid" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" x:Name="ThumbnailResizeButton" Content="&#xE2B2;" Style="{StaticResource ThumbnailButtonStyle}"/>
            <Button Grid.Column="1" x:Name="ThumbnailToGrayScaleButton" Content="&#xE790;" Style="{StaticResource ThumbnailButtonStyle}"/>
            <Button Grid.Column="2" x:Name="ThumbnailUndoChangesButton" Content="&#xE10E;" Style="{StaticResource ThumbnailButtonStyle}"/>
            <Button Grid.Column="3" x:Name="ThumbnailSaveButton" Content="&#xE105;" Style="{StaticResource ThumbnailButtonStyle}"/>
        </Grid>
    </Grid>
</UserControl>
